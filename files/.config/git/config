[alias]
    cl = clone
    ch = checkout
    s = status
    a = add
    ap = add --patch
    res = restore
    reb = rebase
    c = commit
    d = diff
    l = log

[status]
    branch = true
    showStash = true
    short = true

[pull]
    rebase = true

[rebase]
    interactive = true

[commit]
    verbose = true

[log]
    abbrevCommit = true
    all = true
    graph = true
    pretty = format:'%C(magenta)%h %C(white) %an  %ar%C(auto)  %D%n%s%n'

[diff]
